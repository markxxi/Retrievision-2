<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F5F9"
    tools:context=".flow_successful">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_80sdp"
        android:rotation="12"
        android:src="@drawable/icon_box"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/blue"></ImageView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_30sdp"
        android:text="Report Successful"
        android:textColor="@color/yellow"
        android:textSize="@dimen/_28sdp"
        android:fontFamily="@font/poppinsmedium"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"></TextView>

    <soup.neumorphism.NeumorphButton
        android:id="@+id/back_home"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:fontFamily="@font/poppinsmedium"
        android:gravity="center"
        android:text="HOME"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.823"
        app:neumorph_backgroundColor="#F1F5F9"
        app:neumorph_shapeAppearance="@style/neumorphCustomSubmit"
        app:neumorph_strokeColor="@color/yellow"
        app:neumorph_strokeWidth="2dp"
        tools:layout_editor_absoluteX="22dp"></soup.neumorphism.NeumorphButton>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_40sdp"
        android:fontFamily="@font/poppinsmedium"
        android:gravity="center"
        android:text="Thank you for helping to reunite lost and found objects with their owners! If you have any further information or updates, feel free to contact the school admin."
        android:textColor="#1E1E1E"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>