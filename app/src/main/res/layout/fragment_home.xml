<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F5F9"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/RectangleView"
            style="@style/RectangleViewStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginEnd="-41dp"
            android:background="@drawable/shape_rectangle_40">

            <View
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_marginStart="@dimen/_110sdp"
                android:layout_marginTop="-15dp"
                android:alpha="0.2"
                android:background="@drawable/icon_box"
                android:rotation="10">
            </View>
        </FrameLayout>
        <HorizontalScrollView
            android:id="@+id/hsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/RectangleView"
            android:layout_alignStart="@+id/RectangleView"
            android:layout_marginTop="30dp"
            android:layout_marginStart="25dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingEnd="0dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/gfloor"
                    android:layout_width="@dimen/_46sdp"
                    android:layout_height="@dimen/_46sdp"
                    android:background="@drawable/button_selector_default"
                    android:text="G"
                    android:paddingTop="@dimen/_3sdp"
                    android:textSize="@dimen/_18sdp"
                    style="@style/ButtonStyle"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/mfloor"
                    android:layout_width="@dimen/_46sdp"
                    android:layout_height="@dimen/_46sdp"
                    android:background="@drawable/button_selector_default"
                    android:text="M"
                    android:paddingTop="@dimen/_3sdp"
                    android:textSize="@dimen/_18sdp"
                    style="@style/ButtonStyle"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/floor2"
                    android:layout_width="@dimen/_46sdp"
                    android:layout_height="@dimen/_46sdp"
                    android:background="@drawable/button_selector_default"
                    android:text="2"
                    android:paddingTop="@dimen/_3sdp"
                    android:textSize="@dimen/_18sdp"
                    style="@style/ButtonStyle"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/floor3"
                    android:layout_width="@dimen/_46sdp"
                    android:layout_height="@dimen/_46sdp"
                    android:background="@drawable/button_selector_default"
                    android:text="3"
                    android:paddingTop="@dimen/_3sdp"
                    android:textSize="@dimen/_18sdp"
                    style="@style/ButtonStyle"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/floor4"
                    android:layout_width="@dimen/_46sdp"
                    android:layout_height="@dimen/_46sdp"
                    android:background="@drawable/button_selector_default"
                    android:text="4"
                    android:paddingTop="@dimen/_3sdp"
                    android:textSize="@dimen/_18sdp"
                    style="@style/ButtonStyle"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/rfloor"
                    android:layout_width="@dimen/_46sdp"
                    android:layout_height="@dimen/_46sdp"
                    android:background="@drawable/button_selector_default"
                    android:text="R"
                    android:paddingTop="@dimen/_3sdp"
                    android:textSize="@dimen/_18sdp"
                    style="@style/ButtonStyle"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/court"
                    android:layout_width="@dimen/_46sdp"
                    android:layout_height="@dimen/_46sdp"
                    android:background="@drawable/button_selector_default"
                    android:text="C"
                    android:paddingTop="@dimen/_3sdp"
                    android:textSize="@dimen/_18sdp"
                    style="@style/ButtonStyle"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/parking"
                    android:layout_width="@dimen/_46sdp"
                    android:layout_height="@dimen/_46sdp"
                    android:background="@drawable/button_selector_default"
                    android:text="P"
                    android:paddingTop="@dimen/_3sdp"
                    android:textSize="@dimen/_18sdp"
                    style="@style/ButtonStyle"/>
            </LinearLayout>
        </HorizontalScrollView>
        <View
            android:layout_width="51dp"
            android:layout_height="110dp"
            android:layout_alignTop="@+id/RectangleView"
            android:layout_alignStart="@+id/RectangleView"
            android:layout_marginTop="-4dp"
            android:layout_marginStart="-5dp"
            android:background="@drawable/block">
        </View>
        <TextView
            android:id="@+id/floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/RectangleView"
            android:layout_alignTop="@id/hsv"
            android:textColor="@android:color/white"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_55sdp"
            android:fontFamily="@font/poppinsmedium"
            android:textStyle="bold"
            android:textSize="@dimen/_13sdp">
        </TextView>
        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/RectangleView"
            android:layout_alignTop="@id/floor"
            android:textColor="@android:color/white"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_27sdp"
            android:fontFamily="@font/poppinsmedium"
            android:textStyle="bold"
            android:textSize="@dimen/_17sdp"
            android:visibility="gone">
        </TextView>
        <ProgressBar
            android:id="@+id/textProgressBar"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_alignStart="@id/RectangleView"
            android:layout_alignTop="@id/floor"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_29sdp"
            android:visibility="gone">
        </ProgressBar>
        <RelativeLayout
            android:id="@+id/odd_shape"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_309sdp"
            android:layout_marginTop="-35dp"
            android:layout_below="@id/RectangleView">

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_309sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:background="@drawable/scan_container">
            </View>
        <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/losticon"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_marginStart="-40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/ContentDescription"
        android:foregroundGravity="center_vertical"
        android:src="@drawable/icon_lost"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_90sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        android:fontFamily="@font/poppinsmedium"
        android:text="@string/FindMatch"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.657"
        app:layout_constraintStart_toEndOf="@+id/losticon"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="@dimen/_125sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="@dimen/_34sdp"
        android:fontFamily="@font/poppinsmedium"
        android:text="@string/ScanDescription"
        android:textAlignment="textEnd"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.675"
        app:layout_constraintStart_toEndOf="@+id/losticon"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <soup.neumorphism.NeumorphButton
        android:id="@+id/scanbutton"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="@dimen/_141sdp"
        android:layout_height="@dimen/_55sdp"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="@dimen/_9sdp"
        android:layout_marginEnd="@dimen/_24sdp"
        android:drawableStart="@drawable/scan_home"
        android:paddingBottom="@dimen/_8sdp"
        android:clickable="true"
        android:elevation="41dp"
        android:fontFamily="@font/poppinsmedium"
        android:text="@string/ScanNow"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_8sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.685"
        app:layout_constraintStart_toEndOf="@+id/losticon"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:neumorph_backgroundColor="#F7B94A"
        app:neumorph_shadowColorDark="#A87E32"
        app:neumorph_shadowColorLight="#FFC967"
        app:neumorph_shapeType="flat"
        app:neumorph_strokeColor="#F7B94A"
        app:neumorph_strokeWidth="1dp"></soup.neumorphism.NeumorphButton>

</androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/foundObject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/odd_shape"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="@dimen/_37sdp"
            android:layout_marginTop="@dimen/_minus23sdp"
            android:background="@drawable/shape_rectangle_21"
            android:backgroundTint="#E9C96E"
            android:drawableStart="@drawable/icon_box_stroke"
            android:paddingHorizontal="25dp"
            android:paddingVertical="20dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="@string/reportFoundObject"
            android:textAllCaps="false"
            android:textColor="#1D4054"
            android:textStyle="bold">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/lostObject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/foundObject"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginHorizontal="@dimen/_37sdp"
            android:background="@drawable/shape_rectangle_21"
            android:backgroundTint="#384C85"
            android:drawableStart="@drawable/icon_lost"
            android:drawableTint="#F4CF65"
            android:fontFamily="@font/poppinsmedium"
            android:paddingHorizontal="25dp"
            android:paddingVertical="21dp"
            android:text="@string/reportLostObject"
            android:textAllCaps="false"
            android:textColor="#F4CF65"
            android:textStyle="bold">
        </androidx.appcompat.widget.AppCompatButton>

    </RelativeLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center" />
</FrameLayout>