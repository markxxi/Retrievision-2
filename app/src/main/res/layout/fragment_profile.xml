<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment"
    android:background="#F1F5F9"
    android:paddingBottom="@dimen/_100sdp"
    tools:ignore="HardcodedText,UselessParent,SmallSp,contentDescription,UseCompoundDrawables">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="@dimen/_28sdp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <soup.neumorphism.NeumorphCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_125sdp"
                app:neumorph_shapeType="pressed"
                app:neumorph_shadowElevation="9dp">
                <LinearLayout
                    android:id="@+id/infolayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="@dimen/_25sdp"
                    android:layout_gravity="center">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="@dimen/_48sdp"
                        android:layout_height="@dimen/_48sdp"
                        android:src="#181D2F"
                        app:civ_border_color="@color/yellow"
                        app:civ_border_width="3.5dp" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/display_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_10sdp"
                            android:text="Placeholder"
                            android:fontFamily="@font/poppinsmedium"
                            android:textColor="#1E1E1E" />
                        <TextView
                            android:id="@+id/user_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_8sdp"
                            android:text="alcaide.edu.ph"
                            android:fontFamily="@font/poppinsmedium"
                            android:textColor="#1E1E1E" />
                    </LinearLayout>
                </LinearLayout>
            </soup.neumorphism.NeumorphCardView>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="@dimen/_90sdp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <soup.neumorphism.NeumorphCardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:neumorph_shapeType="pressed"
                    app:neumorph_shadowElevation="9dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="10dp">
                        <ImageView
                            android:id="@+id/found_objects"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:padding="@dimen/_17sdp"
                            android:src="@drawable/icon_box"
                            android:gravity="center"
                            app:tint="@color/blue"/>
                        <ImageView
                            android:id="@+id/lost_objects"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:padding="@dimen/_18sdp"
                            android:src="@drawable/icon_lost"
                            android:gravity="center"
                            app:tint="@color/blue"/>
                    </LinearLayout>
                </soup.neumorphism.NeumorphCardView>
                <soup.neumorphism.NeumorphCardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp"
                    app:neumorph_shapeType="pressed"
                    app:neumorph_shadowElevation="9dp">
                    <ImageView
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="@dimen/_26sdp"
                        android:src="@drawable/icon_reward"
                        android:layout_gravity="center"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:cardCornerRadius="11dp"
                        app:cardBackgroundColor="#D6293E"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="11sp"/>
                    </androidx.cardview.widget.CardView>
                </soup.neumorphism.NeumorphCardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <soup.neumorphism.NeumorphCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:neumorph_shapeType="pressed"
                    app:neumorph_shadowElevation="9dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <com.google.android.material.chip.Chip
                            android:id="@+id/recent_status"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            app:chipIcon="@drawable/shape_rectangle_40"
                            app:chipIconSize="10dp"
                            app:chipBackgroundColor="#DADEE2"
                            app:chipCornerRadius="15dp"
                            app:chipStrokeColor="@android:color/transparent"
                            android:text="status"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="@dimen/_7sdp"
                            app:chipEndPadding="2dp"
                            android:layout_marginEnd="16dp"

                            android:layout_gravity="end"
                            android:layout_marginTop="5dp"
                            app:textStartPadding="5dp"
                            android:visibility="gone"/>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv"
                            android:backgroundTint="#f7fafc"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_100sdp"
                            app:cardCornerRadius="20dp"
                            android:layout_marginHorizontal="16dp"
                            android:visibility="gone">
                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:adjustViewBounds="true"
                                android:contentDescription="@string/ContentDescription"
                                android:scaleType="centerCrop" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/cvtext"
                                android:layout_gravity="center"
                                android:text="image not available"
                                android:textSize="@dimen/_8sdp"
                                android:textAlignment="center"
                                android:visibility="gone"/>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginHorizontal="@dimen/_16sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:gravity="center_vertical">
                            <TextView
                                android:id="@+id/recent_text"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="Recent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:fontFamily="@font/poppinsmedium"
                                android:paddingTop="9dp"
                                android:textSize="@dimen/_13sdp"
                                android:textColor="@color/yellow"
                                android:visibility="gone"/>


                        </LinearLayout>
                        <TextView
                            android:id="@+id/recent_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsmedium"
                            android:textColor="@color/blue"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="@dimen/_16sdp"
                            android:textSize="@dimen/_10sdp"
                            android:layout_marginBottom="4dp"/>
                        <TextView
                            android:id="@+id/recent_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsmedium"
                            android:textColor="@color/blue"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="@dimen/_16sdp"
                            android:textSize="@dimen/_10sdp"
                            android:layout_marginBottom="4dp"/>
                        <TextView
                            android:id="@+id/recent_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsmedium"
                            android:textColor="@color/blue"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="@dimen/_16sdp"
                            android:textSize="@dimen/_10sdp"
                            android:layout_marginBottom="4dp"/>
                        <TextView
                            android:id="@+id/recent_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsmedium"
                            android:textColor="@color/blue"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="@dimen/_16sdp"
                            android:textSize="@dimen/_10sdp"/>
                        <TextView
                            android:id="@+id/no_recent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No recent reported object."
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:visibility="gone">
                        </TextView>
                    </LinearLayout>
                    <com.google.android.material.chip.Chip
                        android:id="@+id/recent_chip_report"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_34sdp"
                        app:chipIcon="@drawable/icon_box"
                        app:chipBackgroundColor="@color/blue"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:textColor="@android:color/white"
                        app:chipCornerRadius="@dimen/_6sdp"
                        app:chipIconSize="@dimen/_10sdp"
                        android:textSize="@dimen/_9sdp"
                        android:fontFamily="@font/poppinsmedium"
                        app:chipStrokeColor="@android:color/transparent"
                        app:textStartPadding="8dp"
                        app:iconStartPadding="@dimen/_4sdp"
                        android:elevation="@dimen/_10sdp"
                        android:visibility="gone"/>
                    <com.google.android.material.chip.Chip
                        android:id="@+id/recent_chip_report_lost"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_34sdp"
                        app:chipIcon="@drawable/icon_lost"
                        android:textColor="@android:color/white"
                        app:chipBackgroundColor="@color/yellow"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        app:chipCornerRadius="@dimen/_6sdp"
                        app:chipIconSize="@dimen/_10sdp"
                        android:textSize="@dimen/_9sdp"
                        android:fontFamily="@font/poppinsmedium"
                        app:chipStrokeColor="@android:color/transparent"
                        app:textStartPadding="8dp"
                        app:iconStartPadding="@dimen/_4sdp"
                        android:elevation="@dimen/_10sdp"
                        android:visibility="gone"/>
                    <ProgressBar
                        android:id="@+id/recent_progressbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone">
                    </ProgressBar>

                </soup.neumorphism.NeumorphCardView>
            </LinearLayout>
        </LinearLayout>
        <soup.neumorphism.NeumorphCardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            app:neumorph_shapeType="pressed"
            app:neumorph_shadowElevation="9dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_margin="10dp">
                <ImageView
                    android:id="@+id/ticket"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/_17sdp"
                    app:tint="@color/blue"
                    android:src="@drawable/icon_ticket"></ImageView>
                <ImageView
                    android:id="@+id/surrendered"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/_17sdp"
                    android:src="@drawable/icon_hand"
                    app:tint="@color/blue">
                </ImageView>
                <ImageView
                    android:id="@+id/settings"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/_17sdp"
                    android:src="@drawable/icon_settings"
                    app:tint="@color/yellow">
                </ImageView>
            </LinearLayout>
        </soup.neumorphism.NeumorphCardView>
    </LinearLayout>
</FrameLayout>