<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9C96E"
    tools:context=".ClaimingPass">
    <TextView
        android:id="@+id/h1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="45dp"
        android:text="Claiming Pass"
        android:fontFamily="@font/poppinsmedium"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:textSize="30sp">
    </TextView>
    <TextView
        android:id="@+id/h2"
        android:layout_below="@id/h1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:text="We have notified the SA and the founder"
        android:fontFamily="@font/poppinsmedium"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:textSize="15sp">

    </TextView>
    <TextView
        android:id="@+id/h3"
        android:layout_below="@id/h2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:text="Show this to SA upon claiming the object. You may provide a proof suggesting that the object belongs to you. "
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/blue"
        android:textSize="11sp">
    </TextView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/h3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_horizontal">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">
            <View
                android:layout_width="317dp"
                android:layout_height="536dp"
                android:background="@drawable/claiming_pass"
                android:backgroundTint="@color/blue"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_gravity="center_horizontal">
            </View>

            <View
                android:layout_width="317dp"
                android:layout_height="536dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/claiming_pass"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:id="@+id/cv"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="45dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/ContentDescription"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="246dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="30dp"
                    android:paddingTop="20dp">


                    <!-- Category Row -->
                    <LinearLayout
                        android:id="@+id/reportIdContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinsmedium"
                                android:text="Report ID:"
                                android:textColor="#000000"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/getReportIdAsText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="35.5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="placeholder"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/nameContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinsmedium"
                                android:text="Name:"
                                android:textColor="#000000"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/getNameAsText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="52dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="placeholder"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/typeContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinsmedium"
                                android:text="Type:"
                                android:textColor="#000000"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/getTypeAsText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="59dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="placeholder"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/colorContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinsmedium"
                                android:text="Color:"
                                android:textColor="#000000"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/getColorAsText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="56.5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="placeholder"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/brandContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:fontFamily="@font/poppinsmedium"
                                android:text="Brand:"
                                android:textColor="#000000"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/getBrandAsText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="48.5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="placeholder"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/modelContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:fontFamily="@font/poppinsmedium"
                                android:text="Model:"
                                android:textColor="#000000"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/getModelAsText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="47.5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="placeholder"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/sizeContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:fontFamily="@font/poppinsmedium"
                                android:text="Size:"
                                android:textColor="#000000"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/getSizeAsText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="60dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="placeholder"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/shapeContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:fontFamily="@font/poppinsmedium"
                                android:text="Shape:"
                                android:textColor="#000000"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/getShapeAsText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="46dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="placeholder"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dimensionContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:fontFamily="@font/poppinsmedium"
                                android:text="Dimension:"
                                android:textColor="#000000"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/getWidthAsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="22dp"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="placeholder"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/getHeightAsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="placeholder"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/textContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:fontFamily="@font/poppinsmedium"
                                android:text="Texts:"
                                android:textColor="#000000"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/getTextAsText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="53dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="placeholder"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/remarksContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:fontFamily="@font/poppinsmedium"
                                android:text="Remarks:"
                                android:textColor="#000000"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/getRemarksAsText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32.5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="placeholder"
                            android:textSize="12sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/locationContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinsmedium"
                                android:text="Location:"
                                android:textColor="#000000"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/getLocationAsText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="39.5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="placeholder"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dateFoundContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinsmedium"
                                android:text="Date Found:"
                                android:textColor="#000000"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="23.5dp"
                            android:layout_marginTop="1dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/getDateFound"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinsmedium"
                                android:text="placeholder"
                                android:textSize="12sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dateLostContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/reporterlabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinsmedium"
                                android:text="Date Lost:"
                                android:textColor="#000000"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/getDateLost"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="35.5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="placeholder"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="25dp"
                android:layout_marginHorizontal="20dp"
                app:cornerRadius="8dp"
                android:backgroundTint="#2F2F2F"
                android:text="NOT CLAIMED"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="11dp"
                android:textStyle="bold"
                android:clickable="false">
            </com.google.android.material.button.MaterialButton>
        </FrameLayout>
    </RelativeLayout>


</RelativeLayout>